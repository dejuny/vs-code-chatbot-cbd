{
  "name": "ai-chatbot-extension",
  "displayName": "AI Chatbot Assistant",
  "description": "AI-powered coding assistant with repository awareness",
  "version": "0.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/your-repo.git"
  },
  "publisher": "cbd",
  "license": "MIT",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-chatbot.openChat",
        "title": "Open AI Chat",
        "category": "AI Chatbot"
      },
      {
        "command": "ai-chatbot.openChatInEditor",
        "title": "Open AI Chat in Editor",
        "category": "AI Chatbot"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-chatbot",
          "title": "AI Assistant",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "ai-chatbot": [
        {
          "id": "ai-chatbot.chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ai-chatbot.openChat",
          "when": "view == ai-chatbot.chatView",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "ai-chatbot.openChatInEditor",
          "group": "ai-chatbot",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "AI Chatbot",
      "properties": {
        "ai-chatbot.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for AI service"
        },
        "ai-chatbot.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "AI model to use"
        },
        "ai-chatbot.enableRepositoryAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable repository analysis features"
        },
        "ai-chatbot.backendUrl": {
          "type": "string",
          "default": "https://4xwuxxqbqj.execute-api.us-east-1.amazonaws.com/", 
          "description": "Backend API URL for AI processing"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node ./node_modules/typescript/bin/tsc -p ./",
    "watch": "node ./node_modules/typescript/bin/tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "test:integration:cloud": "BACKEND_URL=https://4xwuxxqbqj.execute-api.us-east-1.amazonaws.com npx mocha tests/cloud-remote.integration.spec.ts --config .mocharc.json"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@types/jsdom": "^21.1.7",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^10.0.20",
    "eslint": "^8.28.0",
    "chai": "^4.4.1",
    "jsdom": "^24.0.0",
    "mocha": "^10.4.0",
    "proxyquire": "^2.1.3",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
